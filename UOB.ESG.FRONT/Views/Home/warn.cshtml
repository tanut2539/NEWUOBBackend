<style>
    .js-warn {
        background: #EEE;
        color: #555;
        display: block;
        width: 30%;
        margin: 0 auto;
        margin-top: 50px;
        border-radius: 10px;
        box-shadow: 0px 10px 70px;
        text-align: center;
        position: relative;
        font-family: sans-serif, serif;
        font-weight: 300;
    }

        .js-warn h1 {
            font-family: sans-serif, serif;
            font-weight: 300;
            padding: 10px 10px 0 10px;
        }

        .js-warn p {
            padding: 0 10px 10px 10px;
        }

        .js-warn a {
            color: #355980;
            text-decoration: none;
            transition: all 0.2s linear;
        }

            .js-warn a:hover {
                color: #000;
            }

    #hide:checked ~ #js-warn-exit {
        display: none;
    }

    #hide {
        position: fixed;
        left: 100%;
    }

    #js-warn-exit {
        padding: 1em;
        overflow: auto;
    }

        #js-warn-exit label {
            background: #355980;
            color: white;
            padding: 0.5em 0.75em;
            cursor: pointer;
            border-radius: 3px;
            float: right;
        }
</style>
<div>
    <input type="checkbox" id="hide" />
    <div class="js-warn" id="js-warn-exit">
        <h1>Something Wrong</h1>
        <p>@ViewBag.message.</p>

        <a href="@Url.Action("index"  ,"Home")"> Back to Page  </a>
    </div>
</div>
